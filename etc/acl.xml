<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Customer::customer">
                    <resource id="Halex_CustomerApproval::extension" title="Customer Approval Extension" sortOrder="10">
                        <resource id="Halex_CustomerApproval::pending_customers" title="Pending Customers Grid"
                                  sortOrder="50"/>
                        <resource id="Halex_CustomerApproval::configuration" title="Configuration" sortOrder="100"/>
                        <resource id="Halex_CustomerApproval::approve_customer" title="Approve Customer Action"
                                  sortOrder="150"/>
                        <resource id="Halex_CustomerApproval::unapprove_customer" title="Unapprove Customer Action"
                                  sortOrder="200"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
